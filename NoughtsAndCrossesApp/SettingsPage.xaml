<Page
    x:Class="NoughtsAndCrossesApp.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NoughtsAndCrossesApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="30,50,10,0">
            <TextBlock Text="Settings" Style="{ThemeResource HeaderTextBlockStyle}"/>
            <ToggleSwitch x:Name="toggleSwMode" Margin="0,20,0,0" Header="Light/Dark Mode"  OffContent="Dark" OnContent="Light" Toggled="ToggleSwitch_Toggled"/>
        </StackPanel>
    </Grid>
</Page>
