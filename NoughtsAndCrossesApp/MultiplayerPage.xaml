<Page
    x:Class="NoughtsAndCrossesApp.MultiplayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NoughtsAndCrossesApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="btnCreateGame" Content="Create Game" Margin="10,34,0,0" VerticalAlignment="Top" Click="btnCreateGame_Click"/>
        <Button x:Name="btnJoinGame" Content="Join Game" Margin="115,34,0,0" VerticalAlignment="Top" Click="btnJoinGame_Click"/>
        <TextBox x:Name="txtBoxGameId" HorizontalAlignment="Left" Margin="205,34,0,0" Text="" PlaceholderText="Game Id.." TextWrapping="Wrap" VerticalAlignment="Top" Width="99"/>

    </Grid>
</Page>
